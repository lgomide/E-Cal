<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name: "
        android:id="@+id/manualUserNameLabel"
        android:layout_alignBottom="@+id/manualUserName"/>

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/manualUserName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Id: "
        android:id="@+id/manualDeviceIdLabel"
        android:layout_alignBottom="@+id/manualDeviceId"/>

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/manualDeviceId"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/manualUserName"
        android:inputType="number"/>
</RelativeLayout>